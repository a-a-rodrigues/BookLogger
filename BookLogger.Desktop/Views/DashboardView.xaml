<UserControl x:Class="BookLogger.Desktop.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:BookLogger.Desktop.Views"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">

    <Grid Margin="20">
        <!-- Define two columns: left for profile/stats, right for main content -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- LEFT SIDE -->
        <StackPanel Grid.Column="0" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top">

            <!-- Greeting -->
            <TextBlock Text="{Binding Username, StringFormat='Welcome, {0}!'}"
                       FontSize="20" FontWeight="Bold" Foreground="#333"
                       Margin="0,0,0,20" TextAlignment="Center"/>

            <!-- Profile Picture -->
            <Border Width="150" Height="150" CornerRadius="75" BorderBrush="Gray" BorderThickness="2" Margin="0,0,0,20">
                <Image Source="{Binding ProfilePicturePath}" Stretch="UniformToFill" />
            </Border>

            <!-- User Statistics -->
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                <TextBlock Text="{Binding BooksCount, StringFormat='Books: {0}'}"
                           FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>
                <TextBlock Text="{Binding ReviewsCount, StringFormat='Reviews: {0}'}"
                           FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>
                <TextBlock Text="{Binding RatingsCount, StringFormat='Ratings: {0}'}"
                           FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>
                <TextBlock Text="{Binding AverageRating, StringFormat='Average Rating: {0:F1}'}"
                           FontSize="16" FontWeight="SemiBold"/>
            </StackPanel>

        </StackPanel>

        <!-- RIGHT SIDE -->
        <!-- (unchanged content below) -->
        <Grid Grid.Column="1" Margin="20,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="3*" />
                <RowDefinition Height="2*" />
            </Grid.RowDefinitions>

            <!-- BOOK SEARCH SECTION -->
            <Border Grid.Row="0" Background="White" CornerRadius="10" Padding="20" Margin="0,0,0,10" BorderBrush="#DDD" BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Book Search" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
                    <DockPanel>
                        <TextBox Width="300" Height="28" Margin="0,0,10,0" VerticalContentAlignment="Center"
                                 Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}" />
                        <Button Content="Search" Width="100" Height="28" Command="{Binding SearchCommand}" />
                    </DockPanel>

                    <ScrollViewer VerticalScrollBarVisibility="Auto" Height="350" Margin="0,10,0,0">
                        <ListView ItemsSource="{Binding SearchResults}">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="#EEE" BorderThickness="0,0,0,1" Padding="5">
                                        <StackPanel Orientation="Horizontal" Margin="0,5,0,5">
                                            <Image Source="{Binding ImageUrl}" Width="60" Height="90" Stretch="UniformToFill" Margin="0,0,10,0"/>
                                            <StackPanel Orientation="Vertical">
                                                <TextBlock Text="{Binding Title}" FontWeight="Bold" FontSize="14"/>
                                                <TextBlock Text="{Binding Author}" Foreground="Gray" FontSize="12"/>
                                                <TextBlock Text="{Binding FirstPublishYear, StringFormat='Published: {0}'}"
                                                           Foreground="DarkGray" FontSize="12"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </ScrollViewer>
                </StackPanel>
            </Border>

            <!-- RECENT ACTIVITY SECTION -->
            <Border Grid.Row="1" Background="White" CornerRadius="10" Padding="20" BorderBrush="#DDD" BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Recent Activity" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
                    <ScrollViewer VerticalScrollBarVisibility="Auto" Height="150">
                        <ItemsControl>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="#EEE" BorderThickness="0,0,0,1" Padding="5">
                                        <TextBlock Text="Placeholder for recent activity item..." Foreground="Gray"/>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>
