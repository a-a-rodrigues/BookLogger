<UserControl x:Class="BookLogger.Desktop.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:BookLogger.Desktop.Views"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">

    <Grid Margin="20">
        <!-- Define two columns: left for profile/stats, right for later content -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- LEFT SIDE -->
        <StackPanel Grid.Column="0" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top" >

            <!-- Profile Picture -->
            <Border Width="150" Height="150" CornerRadius="75" BorderBrush="Gray" BorderThickness="2" Margin="0,0,0,20">
                <Image Source="{Binding CurrentUser.ProfilePicturePath, TargetNullValue='pack://application:,,,/Assets/default_profile.png'}"
                       Stretch="UniformToFill" />
            </Border>

            <!-- User Statistics -->
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                <TextBlock Text="{Binding BooksCount, StringFormat='Books: {0}'}"
               FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>
                <TextBlock Text="{Binding ReviewsCount, StringFormat='Reviews: {0}'}"
               FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>
                <TextBlock Text="{Binding RatingsCount, StringFormat='Ratings: {0}'}"
               FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>
                <TextBlock Text="{Binding AverageRating, StringFormat='Average Rating: {0:F1}'}"
               FontSize="16" FontWeight="SemiBold"/>
            </StackPanel>

        </StackPanel>

        <!-- RIGHT SIDE (placeholder for future content) -->
        <Border Grid.Column="1" Background="#FFF0F0F0" CornerRadius="10" Margin="20,0,0,0">
            <TextBlock Text="Right-side content goes here" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Gray"/>
        </Border>
    </Grid>
</UserControl>
