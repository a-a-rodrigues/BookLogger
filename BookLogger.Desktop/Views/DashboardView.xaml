<UserControl x:Class="BookLogger.Desktop.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:BookLogger.Desktop.Views"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- LEFT SIDE: Profile/Stats -->
        <StackPanel Grid.Column="0" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top">
            <TextBlock Text="{Binding Username, StringFormat='Welcome, {0}!'}" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,15"/>

            <!-- Profile Picture Button -->
            <Button Width="150" Height="150"
        BorderThickness="2"
        BorderBrush="Gray"
        HorizontalAlignment="Center"
        VerticalAlignment="Top"
        Command="{Binding ChangeProfilePictureCommand}"
        Background="Transparent"
        Padding="0"
        ToolTip="Click to change profile picture">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="75" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                            <Image Source="{Binding ProfilePicturePath}" Stretch="UniformToFill">
                                <!-- Clip to circle -->
                                <Image.Clip>
                                    <EllipseGeometry Center="75,75" RadiusX="75" RadiusY="75"/>
                                </Image.Clip>
                            </Image>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>


            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="0,20,0,0">
                <TextBlock Text="{Binding BooksCount, StringFormat='Books: {0}'}" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>
                <TextBlock Text="{Binding ReviewsCount, StringFormat='Reviews: {0}'}" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>
                <TextBlock Text="{Binding RatingsCount, StringFormat='Ratings: {0}'}" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>
                <TextBlock Text="{Binding AverageRating, StringFormat='Average Rating: {0:F1}'}" FontSize="16" FontWeight="SemiBold"/>
                <Button Content="Log out"
                    Command="{Binding LogoutCommand}"
                    Background="White"
                    Foreground="Red"
                    Margin="0,10,0,0"
                    ToolTip="Log out and return to login screen"/>
                <Button Content="Reset Database"
        Command="{Binding ResetDatabaseCommand}"
        Background="LightCoral"
        Foreground="White"
        Margin="0,10,0,0"
        ToolTip="Deletes all BookLogger data and resets the database"/>
            </StackPanel>
        </StackPanel>

        <!-- RIGHT SIDE: Content -->
        <Grid Grid.Column="1" x:Name="RightContentGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="3*" />
                <RowDefinition Height="2*" />
            </Grid.RowDefinitions>

            <!-- BOOK SEARCH SECTION -->
            <Border Grid.Row="0" Background="White" CornerRadius="10" Padding="20" Margin="0,0,0,10" BorderBrush="#DDD" BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Book Search" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
                    <DockPanel Grid.Row="1" Margin="0,0,0,10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <!-- Search box takes all available space -->
                                <ColumnDefinition Width="*" />
                                <!-- Button keeps its fixed width -->
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <TextBox Grid.Column="0"
                 Height="28"
                 VerticalContentAlignment="Center"
                 Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}"
                 Margin="0,0,10,0"/>
                            <Button Grid.Column="1"
                Content="Search"
                Width="100"
                Height="28"
                Command="{Binding SearchCommand}" />
                        </Grid>
                    </DockPanel>

                    <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                        <ListView ItemsSource="{Binding SearchResults}" 
          SelectedItem="{Binding SelectedBook, Mode=TwoWay}" 
          MouseDoubleClick="BookResult_DoubleClick">
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <EventSetter Event="MouseDoubleClick" Handler="BookResult_DoubleClick"/>
                                </Style>
                            </ListView.ItemContainerStyle>
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="#EEE" BorderThickness="0,0,0,1" Padding="5">
                                        <StackPanel Orientation="Horizontal" Margin="0,5,0,5">
                                            <Image Source="{Binding CoverUrl}" Width="60" Height="90" Stretch="UniformToFill" Margin="0,0,10,0"/>
                                            <StackPanel Orientation="Vertical">
                                                <TextBlock Text="{Binding Title}" FontWeight="Bold" FontSize="14"/>
                                                <TextBlock Text="{Binding Author}" Foreground="Gray" FontSize="12"/>
                                                <TextBlock Text="{Binding FirstPublishYear, StringFormat='Published: {0}'}"
                                   Foreground="DarkGray" FontSize="12"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- RECENT ACTIVITY SECTION -->
            <Border Grid.Row="1" Background="White" CornerRadius="10" Padding="20" BorderBrush="#DDD" BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Recent Activity" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding RecentActivity}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="#EEE" BorderThickness="0,0,0,1" Padding="5">
                                        <TextBlock Text="{Binding}" Foreground="Gray"/>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
